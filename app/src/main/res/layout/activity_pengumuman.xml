<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Tombol Kembali -->
    <ImageButton
        android:id="@+id/buttonBackPengumuman"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:contentDescription="Kembali"
        android:scaleType="centerInside"
        android:src="@drawable/ic_tombolkembali" />

    <!-- Header Judul -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF914D"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pengumuman"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Pencarian Pengumuman -->
    <EditText
        android:id="@+id/searchPengumuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cari Pengumuman..."
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="10dp"
        android:textSize="16sp"
        android:layout_marginTop="12dp" />

    <!-- Daftar Pengumuman -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPengumuman"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

    <!-- Tombol Tambah Pengumuman -->
    <Button
        android:id="@+id/buttonTambahPengumuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Pengumuman"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF914D"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="12dp" />

</LinearLayout>
