<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/ic_background1">

    <ImageButton
        android:id="@+id/buttonBackAdmin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start|end"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:contentDescription="Kembali ke Login"
        android:scaleType="centerInside"
        android:src="@drawable/ic_backwhite" />

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Avatar (Gambar Profil) -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="12dp"
            android:clipToOutline="true"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profil" />

        <!-- Teks Sapaan -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Hi, Nama User"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Selamat Datang!"
                android:textColor="@android:color/white"
                android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Grid Menu -->
    <GridLayout
        android:id="@+id/gridMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_margin="8dp">

        <!-- Menu Item Template -->
        <LinearLayout
            android:id="@+id/menuGaji"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:background="@drawable/rounded_bg">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_gaji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gaji Karyawan"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuProfil"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:background="@drawable/rounded_bg">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_profilkaryawan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Profil Karyawan"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuJadwal"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"

            android:elevation="4dp"
            android:background="@drawable/rounded_bg">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_jadwal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Jadwal"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menuPengumuman"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_columnWeight="1"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:background="@drawable/rounded_bg">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/ic_pengumuman" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pengumuman"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>
