<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:layout_margin="16dp"
        android:paddingBottom="32dp">

        <!-- Judul Halaman -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Pengumuman"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- EditText untuk Judul Pengumuman -->
        <EditText
            android:id="@+id/editJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:hint="Judul Pengumuman"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- EditText untuk Tanggal Pengumuman -->
        <EditText
            android:id="@+id/editTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:hint="Tanggal Pengumuman"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:focusable="false"/>

        <!-- EditText untuk Deskripsi Pengumuman -->
        <EditText
            android:id="@+id/editDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi Pengumuman"
            android:background="@android:drawable/editbox_background"
            android:inputType="textMultiLine"
            android:minHeight="120dp"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>

        <!-- LinearLayout untuk memilih gambar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:drawable/editbox_background"
            android:padding="8dp"
            android:layout_marginTop="12dp">

            <!-- TextView untuk menampilkan nama file gambar -->

            <!-- ImageView sebagai tombol pilih gambar -->
            <TextView
                android:id="@+id/textViewNamaGambar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:gravity="center|start"
                android:paddingStart="16dp"
                android:text="Pilih Gambar"
                android:textColor="@android:color/darker_gray"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageViewPilihGambar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Pilih gambar"
                android:padding="8dp"
                android:src="@drawable/ic_tambahgambar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="2">

            <!-- Tombol Cancel -->
            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#D32F2F"
                android:padding="10dp"
                android:text="Batal"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Tombol Simpan -->
            <Button
                android:id="@+id/buttonSimpanPengumuman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:padding="12dp"
                android:text="Simpan"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
